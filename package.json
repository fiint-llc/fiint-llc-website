{
  "name": "fiint-llc-website",
  "version": "1.0.0",
  "private": true,
  "description": "FI Int LLC - Software development company specializing in financial technology",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "ts": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "i18n:check": "node scripts/check-translations.js",
    "i18n:sync": "node scripts/sync-translations.js",
    "i18n:generate": "claude --verbose --append-system-prompt \"$(cat CLAUDE.md)\" -- \"/i18n_generate\"",
    "prepare": "husky"
  },
  "dependencies": {
    "@hookform/resolvers": "^5",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@vercel/analytics": "^1.6.1",
    "@vercel/speed-insights": "^1.3.1",
    "class-variance-authority": "^0.7",
    "clsx": "^2",
    "framer-motion": "^12",
    "lucide-react": "^0.562.0",
    "next": "^16.1.3",
    "next-intl": "^4",
    "next-themes": "^0.4",
    "react": "^19",
    "react-dom": "^19",
    "react-hook-form": "^7",
    "resend": "^6.8.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^25.0.9",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.3",
    "husky": "^9",
    "lint-staged": "^16",
    "postcss": "^8",
    "prettier": "^3",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "pnpm": {
    "overrides": {
      "lightningcss": "^1.30.2"
    }
  }
}
