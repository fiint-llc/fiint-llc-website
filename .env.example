# ============================================
# FI Int LLC Website - Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values

# SMTP Configuration for Contact Form
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Contact form email addresses
CONTACT_TO_EMAIL=hello@thefiint.com
CAREERS_TO_EMAIL=careers@thefiint.com
CONTACT_FROM_EMAIL=noreply@thefiint.com

# Base URL (used for sitemap, OpenGraph)
NEXT_PUBLIC_SITE_URL=https://thefiint.com

# Optional: Rate limiting (requests per minute per IP)
RATE_LIMIT_MAX=5
